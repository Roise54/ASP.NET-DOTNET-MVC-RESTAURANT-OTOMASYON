<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restoran Sipariş Otomasyonu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestoranOtomasyonu.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="cyber-theme">
    <div class="cyber-background"></div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark cyber-nav">
            <div class="container">
                <a class="navbar-brand cyber-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fire cyber-icon me-2"></i>ONLINE SİPARİŞ S.
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link cyber-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link cyber-link" asp-controller="Order" asp-action="Create">
                                <i class="fas fa-plus me-1"></i>Yeni Sipariş
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link cyber-link" asp-controller="Category" asp-action="Index">
                                <i class="fas fa-list me-1"></i>Kategoriler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link cyber-link" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-utensils me-1"></i>Ürünler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link cyber-link" asp-controller="Order" asp-action="Index">
                                <i class="fas fa-receipt me-1"></i>Siparişler
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
